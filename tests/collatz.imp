// Looping
// -------

// ### `collatz.imp`

// Here the Collatz loop is provided, which calculates how many steps it takes a
// given number (in this case 782) to go to 1 using Collatz update.


int n , x ;

n = 782 ;
x = 0 ;

while (2 <= n) {
  if (n <= ((n / 2) * 2)) {
    n = n / 2 ;
  } else {
    n = (3 * n) + 1 ;
  }
  x = x + 1 ;
}

